</div>

<div class="form text-center text-white">
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-12 col-md-8">

          <%= simple_form_for [ @list, @bookmark ] do |f| %>
          <h5><%= f.association :movie %></h3>
          <h5 class="py-4"><%= f.input :comment %></h5>
          <p class="py-3"><%= f.submit "Submit", class: "btn btn-ghost" %></p>
        <% end %>
      </div>
    </div>
  </div>
</div>
