
<div class="banner img-fluid" alt="Responsive image" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://res.cloudinary.com/ddnhxmpbf/image/upload/v1636806951/development/giwlfj8zd1zop2e0xdhu3qtsx5im.jpg);" style="">
  <div class="container text-center">
    <h1 ><%= @list.name %></h1>
    <h1 class="my-4"><%= link_to 'Add bookmark', new_list_bookmark_path(@list), class: "btn btn-ghost"%></h1>
  </div>
</div>

<div class="cards py-5">
  <% @list.movies.each do |movie| %>
    <div class="col-12">
      <% bookmark = Bookmark.find_by(list: @list, movie: movie) %>
        <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= movie.poster_url %>')">
          <p><%= link_to "+", bookmark_path(bookmark), method: :delete, data: { confirm: "Are you sure?" }, class: "card-remove-link" %></p>
        </div>
          <p class="d-flex justify-content-center"><strong><%= movie.title %></strong></p>
          <p><%= movie.overview %></p>
    </div>
  <% end %>
</div>


<h1 class="text-center py-5"><%= link_to 'Back', lists_path, class: "btn btn-ghost"%></h1>
